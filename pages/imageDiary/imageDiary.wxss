}

.img-select {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.img-select-rotate {
  transform: rotate(180deg);
}

.img-share {
  width: 123rpx;
  height: 123rpx;
  position: fixed;
  top: 494rpx;
  right: 2rpx;
}

.input-text {
  font-size: 13pt;
  margin-top: 8rpx;
