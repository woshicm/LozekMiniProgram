/*按钮涟漪效果*/

.waves {
  border-radius: 100%;
  background-color: black;
  transform: scale(0);
  width: 150rpx;
  height: 150rpx;
  position: absolute;
}

.waves-hover {
}

.waves-effect-animation {
  animation: animation-definition 1s ease-out;
}

@keyframes animation-definition {
  from {
    transform: scale(0.1);
    opacity: 0.2;
  }

  to {
    transform: scale(5); /*因为涟漪的大小为标签的最长边，为了保证点击标签边缘时，涟漪也能覆盖整个标签，scale值最小应为2*/
    opacity: 0;
  }
}

