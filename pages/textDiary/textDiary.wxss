.layout-main {
  height: 1150rpx;
  width: 750rpx;
  background-color: #fefefe;
}

.mask {
  width: 100%;
  height: 100%;
  z-index: 40;
  opacity: 0.5;
  position: fixed;
  top: 0;
  left: 0;
}

.titleArea {
  height: 14%;
  margin-top: 20rpx;
}

.titleArea-display {
  height: 12%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
  width: 750rpx;
}

.titleArea-title {
  display: flex;
  justify-content: center;
  width: 100%;
  text-align: center;
}

.titleArea-display-background {
  width: 95%;
  height: 10%;
  position: fixed;
  top: 15rpx;
  /* bottom: 160rpx; */
}

.titleArea-display-text {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 712rpx;
  z-index: 20;
  position: relative;
  left: 18rpx;
  height: 78%;
}

.titleArea-display-text-monthAndDay {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  left: 10rpx;
  bottom: 20rpx;
  line-height: 80%;
  width: 7%;
  top: 8%;
}

.titleArea-display-text-dd {
  font-size: 27pt;
  position: relative;
  left: 15rpx;
  color: white;
  width: 12%;
}

.titleArea-display-text-weather {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  right: 0rpx;
  bottom: 10rpx;
}

.titleArea-display-text-title {
  font-size: 15pt;
  color: white;
  width: 60%;
  position: relative;
  left: 50rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.titleArea-display-image-forwardQuotation {
  width: 28rpx;
  height: 24rpx;
  position: relative;
  bottom: 30rpx;
  right: 20rpx;
}

.titleArea-display-text-title-text {
  color: white;
  font-size: 15pt;
}

.titleArea-display-image-backwardQuotation {
  width: 28rpx;
  height: 24rpx;
  position: relative;
  top: 30rpx;
  left: 20rpx;
}

.titleArea-dateDisplay {
  font-size: 12pt;
  height: 30%;
  margin-bottom: 20rpx;
}

.title-inputTitle {
  height: 60%;
  width: 60%;
  font-size: 17pt;
  position: retative;
  top: 30rpx;
}

.titleArea-dateDisplay {
  margin-left: 25rpx;
}

.functionArea {
  display: flex;
  flex-direction: row;
  width: 750rpx;
  align-items: center;
  justify-content: center;
  align-content: center;
}

.functionArea-item{
  width: 16.6%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  border-bottom: 2rpx solid rgba(55, 121, 205, 0.12);
}

.functionArea-image {
  width: 40rpx;
  height: 40rpx;
}

.functionArea-dictionary {
  width: 30%;
  height: 50rpx;
  background-color: white;
  box-shadow: 0rpx 0rpx 6rpx 1rpx rgba(0, 0, 0, 0.38);
  position: fixed;
  padding-left: 20rpx;
  justify-content: center;
  align-content: center;
  border-radius: 5rpx;
  display: flex;
  left: 7%;
  z-index: 41;
}

.functionArea-dictionary-input {
  width: 80%;
  height: 100%;
  font-size: 12pt;
}

.functionArea-dictionary-button {
  width: 25%;
  height: 100%;
  background-color: #3f8ae9;
  color: white;
  font-size: 10pt;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  padding: 0;
}

.functionArea-dictionary-button_hover {
  filter: brightness(60%);
}

button::after {
  border-radius: 0;
}

.functionArea-dictionary-button-searchIcon {
  width: 30rpx;
  height: 30rpx;
}

.functionArea-dictionary-showResult {
  width: 49%;
  height: 200rpx;
  background-color: white;
  box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0, 0, 0, 0.38);
  position: fixed;
  left: 45%;
  z-index: 41;
  padding: 1%;
}

.functionArea-dictionary-showResult-head {
  padding: 10rpx;
  display: flex;
  align-items: flex-end;
  height: 20%;
  width: 100%;
}

.functionArea-dictionary-showResult-head-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  letter-spacing: 10rpx;
  font-size: 13pt;
    font-weight: bold;
}

.functionArea-dictionary-showResult-head-pinyin {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  font-size: 10pt;
  width: 45%;
  color: #2c2c2c;
}

.functionArea-dictionary-showResult-divideLine {
  height: 2rpx;
  background-color: #3f8ae9;
  position: relative;
  bottom: 5rpx;
}

.functionArea-dictionary-showResult-scrollView {
  height: 70%;
  width: 100%;
}

.functionArea-dictionary-showResult-scrollview-attribute {
  font-size: 10pt;
  color: #3f8ae9;
}

.functionArea-dictionary-showResult-scrollview-text {
  font-size: 10pt;
}

.diaryArea {
  height: 80%;
  width: 700rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 20rpx;
}

.diaryArea-mask {
  width: 750rpx;
  height: 19%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 40;
}

.diaryArea-notice {
  color: grey;
  font-size: 10pt;
  width: 100%;
  height: 80%;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.diary-diaryInputTextArea {
  width: 100%;
  height: 80%;
  font-size: 12pt;
}

.showDiary {
  height: 88%;
  width: 750rpx;
  display: flex;
  justify-content: center;
}

.showDiary-scrollView {
  width: 700rpx;
  height: 100%;
}

.showDiary-scrollView-item {
  position: relative;
  top: 20rpx;
  width: 700rpx;
}

.showDiary-scrollView-font {
  font-size: 13pt;
  line-height: 120%;
  color: #212121;
  font-weight: 300;
}

.addPhoto {
  position: fixed;
  top: 85%;
  width: 750rpx;
  height: 15%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.addPhoto-photos {
  display: flex;
  flex-direction: row;
  width: 680rpx;
  height: 100%;
  justify-content: flex-start;
  align-items: center;
}

.addPhoto-photos-deletePhotoButton {
  position: absolute;
  top: 18%;
  width: 40rpx;
  height: 40rpx;
}

.addPhoto-photos-item {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.addPhoto-divideLine {
  height: 2rpx;
  width: 700rpx;
}

/* 對插入圖片的樣式調整 */

.module-image {
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 6rpx 0rpx rgba(0, 0, 0, 0.38);
  margin: 15rpx;
  z-index: 10;
}

.module-image-leftTop {
  margin-top: 15rpx;
  margin-right: 35rpx;
  float: left;
  clear: left;
}

.module-image-rightBottom {
  float: right;
  clear: right;
  margin-left: 25rpx;
  margin-top: 15rpx;
}

/*修饰*/

.modify-divideLine-light {
  background-color: rgba(55, 121, 205, 0.12);
}

.modify-divideLine-dark {
  background-color: rgba(55, 121, 205, 0.38);
}

.modify-shadow-main-down {
  box-shadow: 0rpx 2rpx 4rpx 0rpx rgba(0, 0, 0, 0.38);
}

.modify-shadow-main-up {
  box-shadow: 0rpx -2rpx 4rpx 0rpx rgba(0, 0, 0, 0.38);
}

.modify-shadow-button {
  box-shadow: 2rpx 2rpx 2rpx 0rpx rgba(0, 0, 0, 0.38);
}
